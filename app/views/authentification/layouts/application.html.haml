!!!
%html
  %head
    = page_title_tag
    = csrf_meta_tags
    = render 'metas'
    = render 'favicon'
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true

    %link{href: Settings.application.name, rel: "copyright"}/
    %link{href: Settings.application.name, rel: "author"}/

  %body
    %header.navbar.navbar-default.navbar-static-top{role: "navigation"}
      .container.container-center
        .navbar-header
          = link_to Settings.application.name, public_root_path, class: 'navbar-brand'
    = render 'container'
    = render 'footer'
