%div{:data => {:grid => "row row3"}}
  %div{:data => {:grid => "col col1 offset1"}}
    %h2 Sign In
    = simple_form_for :session, html: { role: :form } do |f|
      = f.input :email, placeholder: 'Email'
      = f.input :password, placeholder: 'Password'
      = f.submit th('#sign_in.button'), class: 'btn btn-primary'
      = link_to th('#sign_up.button'), :sign_up, class: 'btn btn-link pull-right'
